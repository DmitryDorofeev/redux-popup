{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "allowJs": false,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "lib": [ "dom", "es6", "dom.iterable" ,"scripthost", "es2017" ],
    "pretty": true,
    "declarationDir": "."
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}
